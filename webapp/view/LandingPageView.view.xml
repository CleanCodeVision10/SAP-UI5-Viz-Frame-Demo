                                                <Column
                                                    id="_IDGenColumn7"
                                                    hAlign="Center"
                                                >
                                                    <Label
                                                        id="_IDGenLabel6"
                                                        design="Bold"
                                                        text="Mitigation Underway"
                                                    />
                                                </Column>
                                                <Column id="_IDGenColumn8">
                                                    <Label
                                                        id="_IDGenLabel7"
                                                        design="Bold"
                                                        text="Status"
                                                    />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem
                                                    id="_IDGenColumnListItem1"
                                                >
                                                    <cells>
                                                        <Text
                                                            id="_IDGenText4"
                                                            text="{oDataModel>SpecificSupplyCategories}"
                                                        />
                                                        <Text
                                                            id="_IDGenText5"
                                                            text="{path: 'oDataModel>OverallCategoryCriticality', formatter: '.Formatter.overallCategoryCriticalityFormatter'}"
                                                        />
                                                        <Link
                                                            id="_IDGenLink1"
                                                            text="{oDataModel>Event}"
                                                        />
                                                        <Text
                                                            id="_IDGenText6"
                                                            text="{ path: 'oDataModel>Impact' ,  formatter: '.Formatter.overallCategoryImpactFormatter'}"
