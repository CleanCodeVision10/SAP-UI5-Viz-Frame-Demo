                                        />
                                    </f:layoutData>
                                    <f:content>
                                        <viz:VizFrame
                                            id="idVizFrame1"
                                            width="100%"
                                            height="300px"
                                            vizType="column"
                                        >
                                            <viz:dataset>
                                                <viz.data:FlattenedDataset
                                                    id="_IDGenFlattenedDataset2"
                                                    xmlns:viz.data="sap.viz.ui5.data"
