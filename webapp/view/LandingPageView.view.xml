                                                        <viz.data:DimensionDefinition
                                                            id="_IDGenDimensionDefinition1"
                                                            name="Category"
                                                            value="{Category}"
                                                        />
                                                    </viz.data:dimensions>
                                                    <viz.data:measures>
                                                        <viz.data:MeasureDefinition
                                                            id="_IDGenMeasureDefinition1"
                                                            name="Value"
                                                            value="{Value}"
                                                        />
                                                    </viz.data:measures>
                                                </viz.data:FlattenedDataset>
                                            </viz:dataset>
                                            <viz:feeds>
                                                <viz.feeds:FeedItem
                                                    id="_IDGenFeedItem1"
